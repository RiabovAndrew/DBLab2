<Window x:Class="WpfBDLab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBDLab2"
        xmlns:mainFormVm="clr-namespace:WpfBDLab2.VM.MainFormVM"
        mc:Ignorable="d"
        Title="DBConnector Library" Height="450" Width="800">
    <Window.DataContext>
        <mainFormVm:MainFormVM></mainFormVm:MainFormVM>
    </Window.DataContext>
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Tables" Height="25">
                <MenuItem Header="History"/>
                <MenuItem Header="Cards"/>
                <MenuItem Header="Books"/>
                <MenuItem Header="Students"/>
                <MenuItem Header="Teachers"/>
                <MenuItem Header="Specs"/>
                <MenuItem Header="Facs"/>
                <MenuItem Header="SpecFac"/>
                <MenuItem Header="PublHouses"/>
                <MenuItem Header="Cities" Command="{Binding OpenCitiesTableCommand}"/>
                <MenuItem Header="Authors"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
